public class main {

	public static void main(String[] args) {
  
		double mylist[] = {2.9, 3.1, 1.7, 6.5, 8.3};
		double total = 0;
		double max = mylist[0];
		
		for(double number: mylist) {
			
			if(max < number) {
				max = number;
			}
			
			total += number;
			System.out.println(number);
		}
		
		System.out.println("Toplam = " + total);
		System.out.println("En Büyük = " + max);
	}
}
